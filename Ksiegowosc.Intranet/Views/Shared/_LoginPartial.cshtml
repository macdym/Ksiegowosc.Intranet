@using Microsoft.AspNetCore.Identity
@using Ksiegowosc.Intranet.Areas.Identity.Data

@inject SignInManager<KsiegowoscIntranetUser> SignInManager
@inject UserManager<KsiegowoscIntranetUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link btn btn-link text-light w-auto" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-light w-auto">Logout</button>
            </form>
        </li>
    }
</ul>
