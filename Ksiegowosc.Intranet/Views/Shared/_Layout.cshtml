<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ksiegowosc.Intranet</title>

    <!--Fontawesome-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/all.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/fontawesome.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/brands.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/solid.css" />
    <!--Fontawesome-->
    <!--Start css-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/theme.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/custombody.css" />
    <link rel="stylesheet" href="~/lib/jquery/dist/jquery.resizableColumns.css" />
    <!--End css-->
</head>
<body class="flex-column">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary text-light box-shadow">
            <a href="#" class="text-light text-decoration-none" id="bar">
                <i class="fa fa-bars h2 ml-3 mr-2 pt-2"></i>
            </a>
            <a class="navbar-brand text-light ml-4" asp-area="" asp-controller="Home" asp-action="Index"><h3>Księgowość.Intranet</h3></a>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                @*<partial name="_LoginPartial.cshtml" />*@
            </div>
        </nav>
    </header>

    <main class="vh-100">
        @RenderBody()
    </main>

    <footer class="footer bg-primary text-light mt-auto">
        <div class="ml-5">
            &copy; 2021 - Ksiegowosc.Intranet
        </div>
    </footer>

    <!--Start Script-->
    <script src="~/lib/jquery/dist/jquery.resizableColumns.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/store.js"></script>
    <script src="~/lib/bootstrap/dist/js/all.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('#bar').on('click', function () {
                $('#sidebar').slideToggle("slow");
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
