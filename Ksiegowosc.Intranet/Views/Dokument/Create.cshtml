@model Ksiegowosc.Intranet.ViewModels.DokumentViewModel

<div class="card-body m-2">

    <div class="card-header mb-3">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link text-dark text-decoration-none active">Szablony</a>
            </li>
        </ul>
    </div>

    <form enctype="multipart/form-data" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-sm-10">
                <label class="control-label">Szablon dokumentu</label>
                <div class="custom-file">
                    <input asp-for="CreateDokumentDto.Dokument" class="form-control custom-file-input" />
                    <label class="custom-file-label">Wybierz dokument..</label>
                </div>
                <div class="mt-2">
                    <input type="submit" value="Dodaj" class="btn btn-success text-light pr-2 pl-2" />
                    <a class="btn btn-secondary text-secondary pr-2 pl-2" asp-action="Index">Anuluj</a>
                </div>
            </div>
        </div>
    </form>
</div>